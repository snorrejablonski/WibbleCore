@model WibbleCore.ViewModels.MoviesViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Movies</h2>

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr><td>@Html.ActionLink(movie.Name, "Details", "Movies", new { movie.Id })</td></tr>
        }
    </tbody>
</table>